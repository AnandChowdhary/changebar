{
  "name": "typestart",
  "version": "1.0.0",
  "description": "Typescript DOM library starter template",
  "main": "docs/index.js",
  "module": "docs/index.js",
  "types": "docs/index.d.ts",
  "files": [
    "docs"
  ],
  "repository": "git@github.com:AnandChowdhary/typestart.git",
  "author": "Anand Chowdhary <anandchowdhary@gmail.com>",
  "license": "Unlicense",
  "scripts": {
    "start": "concurrently \"yarn watch\" \"yarn watch-docs\" \"yarn serve\" \"yarn prettier-watch\"",
    "build-docs": "tsc docs/demo.ts",
    "build": "webpack --config webpack.config.ts",
    "watch": "onchange 'src/**/*.{js,jsx,ts,tsx,sass,css}' -- yarn build",
    "watch-docs": "onchange 'docs/**/*.{html}' -- yarn build-docs",
    "serve": "cd docs && live-server && cd ../",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "prettier-watch": "onchange 'src/**/*.{js,jsx,ts,tsx,sass,css}' -- prettier --write {{changed}}"
  },
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@types/node": "^11.9.4",
    "@types/webpack": "^4.4.24",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "live-server": "^1.2.1",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tsc": "^1.20150623.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.2.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
